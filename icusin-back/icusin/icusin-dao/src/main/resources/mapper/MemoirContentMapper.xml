            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into memoir_content (gmt_create, gmt_modified, mark_status,
        memoir_content)
        values (#{gmtCreate,jdbcType=TIMESTAMP}, #{gmtModified,jdbcType=TIMESTAMP}, #{markStatus,jdbcType=TINYINT},
        #{memoirContent,jdbcType=LONGVARCHAR})
    </insert>

