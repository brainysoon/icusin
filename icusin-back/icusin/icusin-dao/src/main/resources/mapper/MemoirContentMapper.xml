        <result column="gmt_modified" jdbcType="TIMESTAMP" property="gmtModified"/>
        <result column="mark_status" jdbcType="TINYINT" property="markStatus"/>
    </resultMap>

    <!-- 附带BLOB 映射 -->
    <resultMap extends="BaseResultMap" id="ResultMapWithBLOBs" type="com.icusin.dao.po.MemoirContentPO">
        <result column="memoir_content" jdbcType="LONGVARCHAR" property="memoirContent"/>
